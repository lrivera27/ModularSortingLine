    // Modal (this should be hidden)
    #moduleModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='moduleModalLabel', aria-hidden='true')
      .modal-dialog(role='document')
        .modal-content
          .modal-header
            h5#moduleModalLabel.modal-title Pick a module type
            button.close(type='button', data-dismiss='modal', aria-label='Close')
              span(aria-hidden='true') Ã—
          .modal-body
            p Main module: This module is where the camera is suposed to be, it has three servos.
            br
            P Side module: This module is any other extra module, this only has two servos.
          .modal-footer
            button.btn.btn-primary#mainModuleButton(type='button') Main Module
            button.btn.btn-warning#sideModuleButton(type='button') Side Module
            button.btn.btn-danger(type='button', data-dismiss='modal') Close

    
